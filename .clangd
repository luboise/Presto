CompileFlags:
  Add: -Wall

Diagnostics:
  UnusedIncludes: Strict
  ClangTidy:
    Add:
      - bugprone*
      - concurrency*
      - cppcoreguidelines*
      - cppcoreguidelines-naming-*
      - modernize*
      - performance*
      - readability*
      - hicpp*
    Remove:
      - modernize-use-trailing-return-type
      - readability-identifier-length
